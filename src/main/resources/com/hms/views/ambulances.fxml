<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600" prefWidth="900" spacing="12" styleClass="page" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hms.controller.AmbulanceController">
   <VBox spacing="4">
      <Label text="Ambulance Management" styleClass="page-title" />
      <Label text="Track and manage ambulance fleet" styleClass="page-subtitle" />
   </VBox>
   
   <HBox spacing="10" styleClass="toolbar">
      <TextField fx:id="searchField" promptText="Search by vehicle number or driver" HBox.hgrow="ALWAYS" styleClass="input" />
      <Button text="Search" onAction="#handleSearch" styleClass="ghost-button" />
      <Button text="Add Ambulance" onAction="#handleAddAmbulance" styleClass="primary-button" />
   </HBox>
   
   <TableView fx:id="ambulanceTable" prefHeight="400" VBox.vgrow="ALWAYS" styleClass="table-view-modern">
      <columns>
         <TableColumn prefWidth="60" text="ID" fx:id="idColumn" />
         <TableColumn prefWidth="120" text="Vehicle #" fx:id="vehicleColumn" />
         <TableColumn prefWidth="100" text="Type" fx:id="typeColumn" />
         <TableColumn prefWidth="130" text="Driver" fx:id="driverColumn" />
         <TableColumn prefWidth="120" text="Phone" fx:id="phoneColumn" />
         <TableColumn prefWidth="110" text="Status" fx:id="statusColumn" />
         <TableColumn prefWidth="150" text="Location" fx:id="locationColumn" />
         <TableColumn prefWidth="100" text="Capacity" fx:id="capacityColumn" />
      </columns>
   </TableView>
   
   <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="form-actions">
      <Button text="Edit" onAction="#handleEditAmbulance" styleClass="ghost-button" />
      <Button text="Update Status" onAction="#handleUpdateStatus" styleClass="ghost-button" />
      <Button text="Delete" onAction="#handleDeleteAmbulance" styleClass="danger-button" />
      <Region HBox.hgrow="ALWAYS" />
      <Button text="Refresh" onAction="#loadAmbulances" styleClass="ghost-button" />
   </HBox>
</VBox>
