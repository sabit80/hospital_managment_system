<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.hms.controller.DashboardController" 
            stylesheets="@../styles.css">
    
    <!-- Top Menu Bar -->
    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">
                    <MenuItem text="Exit" onAction="#handleExit"/>
                </Menu>
                <Menu text="Patients">
                    <MenuItem text="Register New Patient" onAction="#showPatientRegistration"/>
                    <MenuItem text="View All Patients" onAction="#showPatientList"/>
                </Menu>
                <Menu text="Doctors">
                    <MenuItem text="View All Doctors" onAction="#showDoctorList"/>
                </Menu>
                <Menu text="Staff">
                    <MenuItem text="Nurses" onAction="#showNurseList"/>
                    <MenuItem text="Cleaners" onAction="#showCleanerList"/>
                </Menu>
                <Menu text="Reception">
                    <MenuItem text="Visitor Check-In/Out" onAction="#showReception"/>
                </Menu>
                <Menu text="Ambulance">
                    <MenuItem text="Ambulance Management" onAction="#showAmbulances"/>
                </Menu>
                <Menu text="Finance">
                    <MenuItem text="Profit Management" onAction="#showFinance"/>
                </Menu>
                <Menu text="Appointments">
                    <MenuItem text="New Appointment" onAction="#showAppointmentForm"/>
                    <MenuItem text="View Appointments" onAction="#showAppointmentList"/>
                </Menu>
                <Menu text="Help">
                    <MenuItem text="About" onAction="#showAbout"/>
                </Menu>
            </MenuBar>
            
            <!-- Header -->
            <HBox style="-fx-background-color: #2196F3; -fx-padding: 15;">
                <Label text="Hospital Management System" textFill="white">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </top>
    
    <!-- Left Sidebar -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #f5f5f5; -fx-padding: 15;">
            <Label text="Quick Actions" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Separator/>
            
            <Button text="âž• Register Patient" onAction="#showPatientRegistration" 
                    maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="ðŸ‘¥ View Patients" onAction="#showPatientList" 
                    maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="ðŸ‘¨â€âš•ï¸ Doctors" onAction="#showDoctorList" 
                    maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="ðŸ‘©â€âš•ï¸ Nurses" onAction="#showNurseList" 
                    maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="ðŸ§¹ Cleaners" onAction="#showCleanerList" 
                    maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="ðŸ¥ Reception" onAction="#showReception" 
                    maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="ðŸš‘ Ambulances" onAction="#showAmbulances" 
                    maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="ðŸ’° Finance" onAction="#showFinance" 
                    maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="ðŸ“Š Dashboard" onAction="#showDashboard" 
                    maxWidth="Infinity" styleClass="sidebar-button"/>
        </VBox>
    </left>
    
    <!-- Center Content Area -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 20;">
            <VBox spacing="20" alignment="CENTER">
                <Label text="Welcome to Hospital Management System" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                <Label text="Select an option from the menu to get started" style="-fx-font-size: 16px; -fx-text-fill: #666;"/>
                
                <GridPane hgap="20" vgap="20" alignment="CENTER">
                    <padding>
                        <Insets top="30"/>
                    </padding>
                    
                    <!-- Dashboard Cards -->
                    <VBox spacing="10" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 30; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Total Patients" style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
                        <Label fx:id="totalPatientsLabel" text="0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
                    </VBox>
                    
                    <VBox spacing="10" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 30; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Total Doctors" style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
                        <Label fx:id="totalDoctorsLabel" text="0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
                    </VBox>
                    
                    <VBox spacing="10" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 30; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <Label text="Today's Appointments" style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
                        <Label fx:id="todayAppointmentsLabel" text="0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #FF9800;"/>
                    </VBox>
                    
                    <VBox spacing="10" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 30; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <Label text="Pending Appointments" style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
                        <Label fx:id="pendingAppointmentsLabel" text="0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #f44336;"/>
                    </VBox>
                </GridPane>
            </VBox>
        </StackPane>
    </center>
    
    <!-- Bottom Status Bar -->
    <bottom>
        <HBox style="-fx-background-color: #f5f5f5; -fx-padding: 10;">
            <Label fx:id="statusLabel" text="Ready"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Hospital Management System v1.0"/>
        </HBox>
    </bottom>
    
</BorderPane>
