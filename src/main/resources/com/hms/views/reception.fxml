<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600" prefWidth="900" spacing="12" styleClass="page" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hms.controller.ReceptionController">
   <VBox spacing="4">
      <Label text="Reception Management" styleClass="page-title" />
      <Label text="Track visitor check-ins and check-outs" styleClass="page-subtitle" />
   </VBox>
   
   <HBox spacing="10" styleClass="toolbar">
      <TextField fx:id="searchField" promptText="Search by visitor or patient name" HBox.hgrow="ALWAYS" styleClass="input" />
      <Button text="Search" onAction="#handleSearch" styleClass="ghost-button" />
      <Button text="Check In" onAction="#handleCheckIn" styleClass="primary-button" />
   </HBox>
   
   <TableView fx:id="receptionTable" prefHeight="400" VBox.vgrow="ALWAYS" styleClass="table-view-modern">
      <columns>
         <TableColumn prefWidth="60" text="ID" fx:id="idColumn" />
         <TableColumn prefWidth="150" text="Visitor Name" fx:id="visitorNameColumn" />
         <TableColumn prefWidth="150" text="Patient Name" fx:id="patientNameColumn" />
         <TableColumn prefWidth="120" text="Phone" fx:id="phoneColumn" />
         <TableColumn prefWidth="150" text="Purpose" fx:id="purposeColumn" />
         <TableColumn prefWidth="140" text="Check In Time" fx:id="checkInColumn" />
         <TableColumn prefWidth="140" text="Check Out Time" fx:id="checkOutColumn" />
         <TableColumn prefWidth="100" text="Status" fx:id="statusColumn" />
      </columns>
   </TableView>
   
   <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="form-actions">
      <Button text="Check Out" onAction="#handleCheckOut" styleClass="ghost-button" />
      <Button text="Delete" onAction="#handleDeleteReception" styleClass="danger-button" />
      <Region HBox.hgrow="ALWAYS" />
      <Button text="Refresh" onAction="#loadReceptions" styleClass="ghost-button" />
   </HBox>
</VBox>
