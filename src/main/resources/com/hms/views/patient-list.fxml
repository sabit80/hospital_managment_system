<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="12" styleClass="page" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.hms.controller.PatientController">
    
    <VBox spacing="4">
        <Label text="Patient Management" styleClass="page-title" />
        <Label text="Search and manage patient records" styleClass="page-subtitle" />
    </VBox>
    
    <!-- Search Section -->
    <HBox spacing="10" styleClass="toolbar">
        <TextField fx:id="searchField" promptText="Search by name or phone..." styleClass="input" prefWidth="300" HBox.hgrow="ALWAYS" />
        <Button text="Search" onAction="#handleSearch" styleClass="ghost-button" />
        <Button text="Add Patient" onAction="#handleAddPatient" styleClass="primary-button" />
    </HBox>
    
    <!-- Patients Table -->
    <TableView fx:id="patientsTable" VBox.vgrow="ALWAYS" styleClass="table-view-modern">
        <columns>
            <TableColumn text="ID" fx:id="patientIdColumn" prefWidth="60" sortable="false" />
            <TableColumn text="First Name" fx:id="firstNameColumn" prefWidth="120" sortable="false" />
            <TableColumn text="Last Name" fx:id="lastNameColumn" prefWidth="120" sortable="false" />
            <TableColumn text="Date of Birth" fx:id="dateOfBirthColumn" prefWidth="120" sortable="false" />
            <TableColumn text="Gender" fx:id="genderColumn" prefWidth="100" sortable="false" />
            <TableColumn text="Blood Group" fx:id="bloodGroupColumn" prefWidth="100" sortable="false" />
            <TableColumn text="Phone" fx:id="phoneColumn" prefWidth="130" sortable="false" />
            <TableColumn text="Email" fx:id="emailColumn" prefWidth="180" sortable="false" />
            <TableColumn text="Address" fx:id="addressColumn" prefWidth="200" sortable="false" />
        </columns>
    </TableView>
    
    <!-- Status Bar -->
    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-border-color: #E5E7EB; -fx-border-width: 1 0 0 0; -fx-padding: 12 0 0 0;">
        <Label fx:id="statusLabel" text="Total Patients: 0" style="-fx-font-weight: 600; -fx-text-fill: #374151;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Refresh" onAction="#loadPatients" styleClass="ghost-button" />
    </HBox>
</VBox>
