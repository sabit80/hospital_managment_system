<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600" prefWidth="900" spacing="12" styleClass="page" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hms.controller.AddCleanerController">
    <VBox spacing="4">
        <Label text="Add New Cleaner" styleClass="page-title" />
        <Label text="Register a new cleaner in the system" styleClass="page-subtitle" />
    </VBox>
    
    <ScrollPane fitToWidth="true" fitToHeight="false" styleClass="form-scroll">
        <VBox spacing="16" styleClass="card">
            <GridPane hgap="16" vgap="12">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50" />
                    <ColumnConstraints percentWidth="50" />
                </columnConstraints>

                <VBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="First Name" styleClass="form-label" />
                    <TextField fx:id="firstNameField" promptText="Enter first name" styleClass="input" />
                </VBox>
                <VBox spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Last Name" styleClass="form-label" />
                    <TextField fx:id="lastNameField" promptText="Enter last name" styleClass="input" />
                </VBox>

                <VBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label text="Phone" styleClass="form-label" />
                    <TextField fx:id="phoneField" promptText="Enter phone number" styleClass="input" />
                </VBox>
                <VBox spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label text="Email" styleClass="form-label" />
                    <TextField fx:id="emailField" promptText="Enter email" styleClass="input" />
                </VBox>

                <VBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <Label text="Assigned Floor" styleClass="form-label" />
                    <TextField fx:id="assignedFloorField" promptText="Enter floor" styleClass="input" />
                </VBox>
                <VBox spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <Label text="Assigned Area" styleClass="form-label" />
                    <TextField fx:id="assignedAreaField" promptText="Enter area" styleClass="input" />
                </VBox>

                <VBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="3">
                    <Label text="Shift" styleClass="form-label" />
                    <ComboBox fx:id="shiftCombo" prefWidth="150" styleClass="input" />
                </VBox>
                <VBox spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <Label text="Working Hours" styleClass="form-label" />
                    <TextField fx:id="workingHoursField" promptText="e.g., 6:00 AM - 2:00 PM" styleClass="input" />
                </VBox>
            </GridPane>
            
            <VBox spacing="6">
                <Label text="Description / Notes" styleClass="form-label" />
                <TextArea fx:id="descriptionArea" prefRowCount="3" wrapText="true" promptText="Enter additional notes..." styleClass="input text-area" />
            </VBox>
        </VBox>
    </ScrollPane>
    
    <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="form-actions">
        <Button text="Save Cleaner" onAction="#handleSaveCleaner" styleClass="primary-button" />
        <Button text="Clear" onAction="#handleCancel" styleClass="ghost-button" />
    </HBox>
    
    <Label fx:id="statusLabel" text="" styleClass="status-label" />
</VBox>
