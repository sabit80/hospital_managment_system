<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600" prefWidth="900" spacing="12" styleClass="page" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hms.controller.CleanerController">
   <VBox spacing="4">
      <Label text="Cleaner Management" styleClass="page-title" />
      <Label text="Manage cleaning staff and areas" styleClass="page-subtitle" />
   </VBox>
   
   <HBox spacing="10" styleClass="toolbar">
      <TextField fx:id="searchField" promptText="Search by name or floor" HBox.hgrow="ALWAYS" styleClass="input" />
      <Button text="Search" onAction="#handleSearch" styleClass="ghost-button" />
      <Button text="Add Cleaner" onAction="#handleAddCleaner" styleClass="primary-button" />
   </HBox>
   
   <TableView fx:id="cleanerTable" prefHeight="400" VBox.vgrow="ALWAYS" styleClass="table-view-modern">
      <columns>
         <TableColumn prefWidth="60" text="ID" fx:id="idColumn" />
         <TableColumn prefWidth="120" text="First Name" fx:id="firstNameColumn" />
         <TableColumn prefWidth="120" text="Last Name" fx:id="lastNameColumn" />
         <TableColumn prefWidth="120" text="Phone" fx:id="phoneColumn" />
         <TableColumn prefWidth="100" text="Floor" fx:id="floorColumn" />
         <TableColumn prefWidth="130" text="Area" fx:id="areaColumn" />
         <TableColumn prefWidth="100" text="Shift" fx:id="shiftColumn" />
         <TableColumn prefWidth="110" text="Status" fx:id="statusColumn" />
         <TableColumn prefWidth="200" text="Description" fx:id="descriptionColumn" />
      </columns>
   </TableView>
   
   <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="form-actions">
      <Button text="Edit" onAction="#handleEditCleaner" styleClass="ghost-button" />
      <Button text="Delete" onAction="#handleDeleteCleaner" styleClass="danger-button" />
      <Region HBox.hgrow="ALWAYS" />
      <Button text="Refresh" onAction="#loadCleaners" styleClass="ghost-button" />
   </HBox>
</VBox>
