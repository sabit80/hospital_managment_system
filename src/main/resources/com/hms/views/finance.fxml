<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600" prefWidth="900" spacing="10" style="-fx-padding: 15;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hms.controller.FinanceController">
   <Label text="Hospital Profit Management" style="-fx-font-size: 24; -fx-font-weight: bold;" />
   
   <HBox spacing="20" style="-fx-padding: 10; -fx-border-color: #ccc; -fx-border-radius: 5;">
      <VBox spacing="5">
         <Label text="Total Income:" style="-fx-font-weight: bold;" />
         <Label fx:id="totalIncomeLabel" text="0.00" style="-fx-font-size: 18; -fx-text-fill: green;" />
      </VBox>
      <VBox spacing="5">
         <Label text="Total Expense:" style="-fx-font-weight: bold;" />
         <Label fx:id="totalExpenseLabel" text="0.00" style="-fx-font-size: 18; -fx-text-fill: red;" />
      </VBox>
      <VBox spacing="5">
         <Label text="Net Profit:" style="-fx-font-weight: bold;" />
         <Label fx:id="netProfitLabel" text="0.00" style="-fx-font-size: 18; -fx-text-fill: blue;" />
      </VBox>
      <Button text="Refresh" onAction="#loadFinanceData" />
   </HBox>
   
   <HBox spacing="10">
      <Button text="Add Income" onAction="#handleAddIncome" />
      <Button text="Add Expense" onAction="#handleAddExpense" />
      <Button text="Export Report" onAction="#handleExportReport" />
   </HBox>
   
   <Label text="Transaction History" style="-fx-font-weight: bold;" />
   <TableView fx:id="financeTable" prefHeight="350" VBox.vgrow="ALWAYS">
      <columns>
         <TableColumn prefWidth="50" text="ID" fx:id="idColumn" />
         <TableColumn prefWidth="100" text="Date" fx:id="dateColumn" />
         <TableColumn prefWidth="80" text="Type" fx:id="typeColumn" />
         <TableColumn prefWidth="100" text="Category" fx:id="categoryColumn" />
         <TableColumn prefWidth="150" text="Description" fx:id="descriptionColumn" />
         <TableColumn prefWidth="100" text="Amount" fx:id="amountColumn" />
         <TableColumn prefWidth="100" text="Payment Method" fx:id="methodColumn" />
         <TableColumn prefWidth="150" text="Remarks" fx:id="remarksColumn" />
         <TableColumn prefWidth="80" text="Actions" fx:id="actionsColumn" />
      </columns>
   </TableView>
   
   <HBox spacing="10">
      <Button text="Delete" onAction="#handleDeleteTransaction" />
      <Button text="Refresh" onAction="#loadTransactions" />
   </HBox>
</VBox>
