<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600" prefWidth="900" spacing="12" styleClass="page" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hms.controller.FinanceController">
   <VBox spacing="4">
      <Label text="Finance Management" styleClass="page-title" />
      <Label text="Track income, expenses, and financial health" styleClass="page-subtitle" />
   </VBox>
   
   <HBox spacing="16" style="-fx-padding: 12;">
      <VBox spacing="8" alignment="CENTER" styleClass="stat-card" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
         <Label text="ðŸ’° Total Income" style="-fx-font-size: 12px; -fx-text-fill: #6B7280; -fx-font-weight: 600;" />
         <Label fx:id="totalIncomeLabel" text="0.00" style="-fx-font-size: 24px; -fx-text-fill: #10B981; -fx-font-weight: 700;" />
      </VBox>
      <VBox spacing="8" alignment="CENTER" styleClass="stat-card" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
         <Label text="ðŸ’¸ Total Expense" style="-fx-font-size: 12px; -fx-text-fill: #6B7280; -fx-font-weight: 600;" />
         <Label fx:id="totalExpenseLabel" text="0.00" style="-fx-font-size: 24px; -fx-text-fill: #EF4444; -fx-font-weight: 700;" />
      </VBox>
      <VBox spacing="8" alignment="CENTER" styleClass="stat-card" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
         <Label text="ðŸ“Š Net Profit" style="-fx-font-size: 12px; -fx-text-fill: #6B7280; -fx-font-weight: 600;" />
         <Label fx:id="netProfitLabel" text="0.00" style="-fx-font-size: 24px; -fx-text-fill: #3B82F6; -fx-font-weight: 700;" />
      </VBox>
   </HBox>
   
   <HBox spacing="10" styleClass="toolbar">
      <Button text="Add Bill" onAction="#handleAddBill" styleClass="primary-button" />
      <Button text="Add Expense" onAction="#handleAddExpense" styleClass="ghost-button" />
      <Button text="Export Report" onAction="#handleExportReport" styleClass="ghost-button" />
      <Region HBox.hgrow="ALWAYS" />
      <Button text="Refresh" onAction="#loadFinanceData" styleClass="ghost-button" />
   </HBox>
   
   <Label text="Transaction History" style="-fx-font-weight: 600; -fx-text-fill: #374151; -fx-font-size: 14px;" />
   <TableView fx:id="financeTable" prefHeight="350" VBox.vgrow="ALWAYS" styleClass="table-view-modern">
      <columns>
         <TableColumn prefWidth="60" text="ID" fx:id="idColumn" />
         <TableColumn prefWidth="110" text="Date" fx:id="dateColumn" />
         <TableColumn prefWidth="100" text="Type" fx:id="typeColumn" />
         <TableColumn prefWidth="120" text="Category" fx:id="categoryColumn" />
         <TableColumn prefWidth="180" text="Description" fx:id="descriptionColumn" />
         <TableColumn prefWidth="110" text="Amount" fx:id="amountColumn" />
         <TableColumn prefWidth="130" text="Payment Method" fx:id="methodColumn" />
         <TableColumn prefWidth="180" text="Remarks" fx:id="remarksColumn" />
      </columns>
   </TableView>
   
   <HBox spacing="10">
      <Button text="Delete" onAction="#handleDeleteTransaction" />
      <Button text="Refresh" onAction="#loadTransactions" />
   </HBox>
</VBox>
